{
    "lint-staged": {
        "*.js|resources/**/*.{vue,js}": [
            "eslint --fix",
            "prettier --write --ignore-unknown"
        ],
        "**/*.{json,yml,md}": [
            "prettier --write --ignore-unknown"
        ],
        "**/*.{css,scss}": [
            "prettier --write --ignore-unknown",
            "stylelint --allow-empty-input --fix"
        ],
        "**/*.php": [
            "prettier --write --ignore-unknown",
            "vendor/bin/pint"
        ]
    }
}