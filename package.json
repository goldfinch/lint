{
  "type": "module",
  "scripts": {
    "lint": "eslint *.js themes -c vendor/goldfinch/lint/eslint.config.js",
    "format": "prettier --write '**/*.{js,vue,css,scss,json,yml,md}' --config vendor/goldfinch/lint/.prettierrc"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js|themes/**/*.{vue,js}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "**/*.{css,scss,json,yml,md}": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.php": [
      "vendor/bin/pint"
    ]
  },
  "engines": {
    "node": ">=21.7.1",
    "npm": "~10.5.0"
  }
}
